{
    "manifest_version": 3,
    "name": "Live Translation",
    "version": "1.0",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "assets/icon.png"
    },
    "permissions": [
        "storage", "tabs", "tabCapture", "activeTab"
    ],
    "host_permissions": [
        "https://*/*",
        "https://*/*"
    ]
}
